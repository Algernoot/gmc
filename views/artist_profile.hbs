<div class="d-flex top-img-short" style="background-image: url('/img/sample_top.png');"></div>
<div class="cover d-flex" id="startchange">
    <p class="mx-auto pt-3">Music player here</p>
</div>
<div class="h-100 mx-5 p-5">
    <div class="row my-5">
        <div class="col-lg-6">
            <p class="title">{{{artist_name artist.name}}}</p>
            <p class="pl-5">{{artist.history}}</p>
            <p class="title"><span class="green-font">S</span>OCIALS</p>
            <ul class="social-icon">
                <a class="facebook" href="https://www.facebook.com/"><i class="fa fa-facebook"></i></a>
                <a class="twitter" href="https://www.twitter.com/"><i class="fa fa-twitter"></i></a>
                <a class="twitter" href="https://www.instgram.com/"><i class="fa fa-instagram"></i></a>
                <a class="spotify" href="https://www.spotify.com/"><i class="fa fa-spotify"></i></a>
                <a class="spotify" href="https://www.soundcloud.com/"><i class="fa fa-soundcloud"></i></a>
            </ul>
        </div>
        <div class="col-lg-6 text-right">
            <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                </ol>
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img class="d-block w-100" src="/img/artist_img.png" alt="First slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="/img/sample_top.png" alt="Second slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="/img/event_bg.png" alt="Third slide">
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
    </div>
</div>