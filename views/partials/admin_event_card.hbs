<div class="event-card" data="{{event._id}}">
      <iframe class="card-iframe" width="600" height="300" src="https://www.youtube.com/embed/lep7-tH15MY?&showinfo=0&controls=0&autohide=1&allownetworking=internal&mute=1&disablekb=1&loop=1&playlist=lep7-tH15MY" frameborder="0"></iframe>
    <div class="transparent"></div>
    <div class="row" id="row1">     
        <p class="event-name col-lg-6">{{event.name}}</p>
        <p class="event-card-date  col-lg-6">{{date_format event.date}}</p>        
    </div>
    
    <div class="top_cover"></div>
    <div class="bottom_cover"></div>
    
    <p class="event-card-desc">{{event.description}}</p>
    <a href="admin/AddEditEvent/{{event._id}}"><i class="fa fa-pencil fa-lg" aria-hidden="true"></i></a>
    <a href="/admin/delete/{{this._id}}" onclick="return confirm('Are you sure to delete this record ?');"><i class="fa fa-trash fa-lg" aria-hidden="true"></i></a>
</div>